<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Default"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/sample_wizard_step3_type_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sample_wizard_step3_type_label" />

    <EditText
        android:id="@+id/sample_wizard_step3_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/sample_wizard_step3_size_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sample_wizard_step3_size_label" />

    <EditText
        android:id="@+id/sample_wizard_step3_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/sample_wizard_step3_phone_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sample_wizard_step3_phone_label" />

    <EditText
        android:id="@+id/sample_wizard_step3_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone" />

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="@string/submit" />
</LinearLayout>